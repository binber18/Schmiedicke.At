@model IEnumerable<Schmiedicke.At.Models.Link>
@{
    ViewData["Title"] = "Links";
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-6 g-4">
    @foreach (var link in Model)
    {
        <div class="col">
            <a href="@link.Url"
               target="_blank"
               class="card text-navy text-decoration-none p-2 border-primary">
                <img src="@link.Image" class="card-img-top m-auto" alt="@link.Text" style="max-width: 100px; height: 100px;">
                <div class="card-body text-center">
                    <h5 class="card-title">@link.Text</h5>
                </div>
            </a>
        </div>
    }
</div>